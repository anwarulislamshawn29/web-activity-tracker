{
  "manifest_version": 3,
  "name": "Web Activity Tracker",
  "version": "1.0.0",
  "description": "Track time spent on websites with this free, privacy-focused extension. View daily/weekly summaries, export data as CSV, and close tabs effortlessly.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["faq.html", "faq.css"],
      "matches": ["<all_urls>"]
    }
  ]
}